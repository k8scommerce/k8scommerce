        "parameters": [
          {
            "name": "customerId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateCartRequest"
            }
          }
        ],
        "tags": [
          "gateway"
        ]
      }
    }
  },
