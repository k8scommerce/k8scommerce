      "get": {
        "summary": "returns a shopping cart if one exists",
        "operationId": "getCart",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/GetCartResponse"
            }
          }
        },
        "parameters": [
          {
            "name": "customerId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "gateway"
        ]
      },
      "post": {
        "summary": "creates a shopping cart for the associated customerId. Each customer can only have 1 cart ever.",
        "operationId": "createCart",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/CreateCartResponse"
            }
          }
